<div class="account-form">
  <form class="Login col-sm-4" action="/login" method="POST">
    <h1>Log In</h1>
    <div class="form-group">
      <!-- <label class="col-sm-1">Username</label> -->
      <input type="text" name="user[username]" class="username form-control" placeholder="Enter username">
    </div>

    <div class="form-group">
      <!-- <label>Password</label> -->
      <input type="password" name="user[password]" class="password form-control" placeholder="Enter password">
    </div>

    <div class="form-group">
      <button type="submit" value="Login"class="btn btn-primary">Log In</button>
    </div>
  </form>
</div>
