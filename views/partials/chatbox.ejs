
  <div id = "chatbox">
    <div id="chat-head">
      <span>Chat Room</span>
    </div>
    <div id="content"></div>
    <div class ="chat-input">
      <span id="status">Connecting...</span>
      <input type="text" id="input" disabled />
    </div>
  </div>
</div>

<script src="/js/websocket.js"  type="text/javascript"></script>

<script  type="text/javascript">
  var visible = false;
  $("#chat-head").click(function() {
    if (visible == true){
      $("#chatbox").animate({
        bottom: "-215px"
      }, 150 );
      visible = false;
    } else {
      $("#chatbox").animate({
        bottom: "0px"
      }, 150 );
      visible = true;
    }
  });
</script>
