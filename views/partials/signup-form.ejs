<div>
  <form id="signup-form" class="CreateUser" action="/createUser" method="POST">
    <h1>Create a new user</h1>
    <div class="form-group form-control-danger">
      <input id="username-input" type="text" name="user[username]" class="username" placeholder="username" required>
      <div id="error-message" class="form-control-feedback">Username taken</div>
    </div>

    <div class="form-group">
      <input type="password" name="user[password]" class="password" placeholder="password" required>
    </div>

    <div class="form-group">
      <input type="email"  name="user[email]" class="email" placeholder="email" required>
    </div>

    <div class="form-group">
      <button type="submit" class="btn btn-primary">Sign Up</button>
    </div>
  </form>
</div>
