<!DOCTYPE html>
<html>

	<head>
    <% include ../partials/head %>
	</head>

	<body>

		<header>
			<% include ../partials/header %>
		</header>

    <div class="container content-wrapper">
      <h2>Recipes</h2>
      <p>
        <a href = "/add_recipe"> Add a new recipe! </a>
      </p>
      <ul>
          <% recipe.forEach(function(recipe) { %>
              <li>
                <a href = "/recipes/<%= recipe.name %>" >
                  <%= recipe.name %> by <%= recipe.username %>
                </a>
              </li>
          <% }); %>
      </ul>
    </div>

		<footer>
			<% include ../partials/footer %>
		</footer>

  </body>
</html>
